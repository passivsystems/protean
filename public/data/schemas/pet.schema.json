{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "pet",
  "description": "Pet representation",
  "properties": {
    "id": { "type": "string" },
    "status": { "type": "string", "enum": ["available", "pending", "sold"] },
    "name": { "type": "string" },
    "age": { "type": "integer" }
  },
  "required": ["status", "name"],
  "additionalProperties": false
}
